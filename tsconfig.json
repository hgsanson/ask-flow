{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "23.0.0",
  "compilerOptions": {
    "lib": [
      "es2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator",
      "ESNext.Promise"
    ],
    "module": "nodenext",
    "target": "es2024",
    "noEmit": true, // Use TS only for type checking, not bundling
    "allowImportingTsExtensions": true, // Allow import TS files
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  }
}